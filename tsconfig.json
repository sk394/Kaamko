{

  "compilerOptions": {

    "jsx": "react-native",

    "target": "es2015",

    "lib": ["dom", "dom.iterable", "es6"],

    "allowJs": true,

    "skipLibCheck": true,

    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true,

    "strict": true,

    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",

    "resolveJsonModule": true,

    "isolatedModules": true,

    "noEmit": true

  },

  "include": [

    "**/*.ts",

    "**/*.tsx"

  ]

}
